{
  "name": "淘生词",
  "description": "淘生词",
  "version": "2.0",

  "permissions": [
    "<all_urls>",
    "storage",
    "notifications",
    "contextMenus"
  ],

  "background": {
    "scripts": [
      "js/jquery.js",
      "js/store.js",
      "js/background.js",
      "js/ignore.js"
    ]
  },

   "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["js/jquery.js", "js/store.js", "js/config.js", "js/recall-word.js"],
      "css":["css/popbox.css", "css/word-recall.css"]
    }
  ],

  "browser_action": {
    "default_title": "淘生词",
    "default_popup": "login.html"

  },
  "icons": {
    "128": "images/icon-128.png",
    "48": "images/icon-48.png",
    "16":"images/icon-16.png"
  },
  "manifest_version": 2
}
